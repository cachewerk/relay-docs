{% extends "default/layout/layout.twig" %}

{%- block footer -%}
    <div id="footer">
        {{ 'Generated by %sDoctum%s.'|trans|format('<a href="https://github.com/code-lts/doctum">', '</a>')|raw }}
        {%- if project.hasFooterLink() -%}
            {% set link = project.getFooterLink() %}
            <br/>
            {{- link.before_text }}
            {%- if link.href is not empty -%}
                {{ " " }}<a href="{{ link.href }}" rel="{{ link.rel }}" target="{{ link.target }}">{{ link.link_text }}</a>{{ " " }}
            {%- endif -%}
            {{ link.after_text -}}
        {%- endif -%}
    </div>
{%- endblock -%}
